CREATE TABLE IF NOT EXISTS gidalar (
    id INTEGER PRIMARY KEY AUTOINCREMENT, -- Otomatik artan ID (Primary Key)
    urun_adi TEXT NOT NULL,
    marka TEXT,
    barkod TEXT, -- Barkod okutursak diye
    kalori_100gr REAL,
    seker_100gr REAL,
    resim_url TEXT,
    tarih DATETIME DEFAULT CURRENT_TIMESTAMP
);

-- 2. Tablo: Egzersizler (Dönüşüm hesabı için sabit veriler)
